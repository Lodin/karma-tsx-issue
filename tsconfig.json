{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2021", "dom"],
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "importsNotUsedAsValues": "error",
    "noImplicitOverride": true,
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["karma.config.ts"],
}
